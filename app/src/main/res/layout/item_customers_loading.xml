<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundview"
    tools:context=".ui.view.SplahsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@color/fongriscargado"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text=""
                        android:fontFamily="@font/robotobold"
                        android:textColor="@color/titulosprincipla"
                        android:textSize="12sp" />
                    <ImageView
                        android:id="@+id/imgMenu"
                        android:layout_weight="0"
                        android:src="@drawable/iconomenu"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        app:tint="@color/fongriscargado">
                    </ImageView>
                </LinearLayout>

                <TextView
                    android:background="@color/fongriscargado"
                    android:id="@+id/txtCustomers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text=""
                    android:padding="5dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/titulos"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text=""
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/titulosprincipla"
                    android:textSize="12sp" />
                <TextView
                    android:background="@color/fongriscargado"
                    android:id="@+id/txtDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text=""
                    android:padding="5dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/titulos"
                    android:textSize="16sp" />

                <LinearLayout
                    android:background="@color/fongriscargado"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text=""
                        android:fontFamily="@font/robotobold"
                        android:textColor="@color/titulosprincipla"
                        android:textSize="16sp"/>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>